@using LojaCarrosV2.Utilidade
@model LojaCarrosV2.PainelWeb.Models.ClienteVM

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Areas/master/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Detalhes de @Html.DisplayFor(m => m.Nome)
    </div>
    <div class="panel-body">

        <div class="form-horizontal">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdCliente)

            <div class="row">
                <div class="col-md-7">
                    <div class="col-md-4">
                        @Html.LabelFor(u => u.Nome)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(u => u.Nome)
                    </div><div class="clearfix"></div>

                    <div class="col-md-4">
                        @Html.LabelFor(u => u.Email)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(u => u.Email)
                    </div><div class="clearfix"></div>

                    <div class="col-md-4">
                        @Html.LabelFor(u => u.CEP)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(u => u.CEP)
                    </div><div class="clearfix"></div>

                    <div class="col-md-4">
                        @Html.LabelFor(u => u.Logradouro)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(u => u.Logradouro)
                    </div><div class="clearfix"></div>

                    <div class="col-md-4">
                        @Html.LabelFor(u => u.Bairro)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(u => u.Bairro)
                    </div><div class="clearfix"></div>

                    <div class="col-md-4">
                        @Html.LabelFor(u => u.Cidade)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(u => u.Cidade)
                    </div><div class="clearfix"></div>

                    <div class="col-md-4">
                        @Html.LabelFor(u => u.Estado)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(u => u.Estado)
                    </div><div class="clearfix"></div>

                    <div class="col-md-4">
                        @Html.LabelFor(u => u.Telefone1)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(u => u.Telefone1)
                    </div><div class="clearfix"></div>

                    <div class="col-md-4">
                        @Html.LabelFor(u => u.Telefone2)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(u => u.Telefone2)
                    </div><div class="clearfix"></div>

                    <div class="col-md-4">
                        @Html.LabelFor(u => u.DataCadastro)
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(u => u.DataCadastro)
                    </div><div class="clearfix"></div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <div class="col-md-11">
                        @*<a href="@Url.Action("Cadastro", "Orcamentos", new { area = "Admin", controller = "Orcamentos", id= Model.IdCliente }).ToLower()" class="btn btn-success">Novo Orçamento</a>*@

                    </div>
                    <div class="col-md-1">
                        @Html.LinkVoltar("Voltar")
                    </div>
                </div>
            </div>
        </div>


        <hr />


    </div>
</div>
