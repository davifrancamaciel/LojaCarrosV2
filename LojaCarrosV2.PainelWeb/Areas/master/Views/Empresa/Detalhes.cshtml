@model LojaCarrosV2.PainelWeb.Areas.master.Models.EmpresaVM
@using LojaCarrosV2.Utilidade

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Areas/master/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        @ViewBag.Title
    </div>
    <div class="panel-body ">

        <div class="form-horizontal">


            <div class="form-horizontal col-md-8">


                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Nome" disabled />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Email" disabled />
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Telefone1, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        <input type="text" class="form-control" value="@Model.Telefone1" disabled />
                    </div>

                    @Html.LabelFor(model => model.Telefone2, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        <input type="text" class="form-control" value="@Model.Telefone2" disabled />
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.URL, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.URL" disabled />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CNPJ, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        <input type="text" class="form-control" value="@Model.CNPJ" disabled />
                    </div>
                    @Html.LabelFor(model => model.DiaVencimento, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        <input type="number" class="form-control" value="@Model.DiaVencimento" disabled />
                    </div>
                    @Html.LabelFor(model => model.Ativa, htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-1">
                        <div class="checkbox">
                            @Html.DisplayFor(model => model.Ativa)                            
                        </div>
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.CEP, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.CEP" disabled />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Logradouro, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Logradouro" disabled />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Bairro, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Bairro" disabled />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Cidade" disabled />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Estado" disabled style="width:75px" />
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Observacoes, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <textarea class="form-control" disabled>
                            @Model.Observacoes
                        </textarea>

                    </div>
                </div>

            </div>
            <div class="form-horizontal col-md-4">
                <div class="form-group">
                    <label class="control-label col-md-4">Veiculos</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@ViewBag.Veiculos.Count" disabled  />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Usuarios</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@ViewBag.Usuarios.Count" disabled  />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">Clientes</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@ViewBag.Clientes.Count" disabled />
                    </div>
                </div>
                
                
                
            </div>
                <hr />
                <br />
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-11">

                        <a href="@Url.Action("editar", "empresa", new { id = Model.IdEmpresa })" class="btn btn-info">Editar</a>
                        @Html.LinkVoltar("Voltar")

                    </div>
                </div>

            </div>

    </div>
</div>

