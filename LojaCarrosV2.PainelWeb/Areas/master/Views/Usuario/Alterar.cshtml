@using LojaCarrosV2.Utilidade
@model LojaCarrosV2.PainelWeb.Models.UsuarioModelAlterarSenha
@{
    ViewBag.Title = "Alterar minha Senha";
    Layout = "~/Areas/master/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        Alterar Senha
    </div>
    <div class="panel-body">

        <div class="form-horizontal">



            @using (Html.BeginForm("Alterar", "Usuario", FormMethod.Post))
            {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdUsuario)
            @Html.HiddenFor(model => model.Email)

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label col-md-4"> @Html.LabelFor(u => u.Email)</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" disabled value="@Model.Email" />                                                    
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4"> @Html.LabelFor(u => u.SenhaAtual)</label>
                        <div class="col-md-8">
                            @Html.PasswordFor(u => u.SenhaAtual, new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.SenhaAtual, "", new { @class = "text-danger" })<div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4"> @Html.LabelFor(u => u.Senha)</label>
                        <div class="col-md-8">
                            @Html.PasswordFor(u => u.Senha, new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.Senha, "", new { @class = "text-danger" })<div class="clearfix"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4"> @Html.LabelFor(u => u.SenhaConf)</label>
                        <div class="col-md-8">
                            @Html.PasswordFor(u => u.SenhaConf, new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.SenhaConf, "", new { @class = "text-danger" })<div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    <input type="submit" value="Salvar" class="btn btn-primary" />

                    @Html.LinkVoltar("Voltar")
                </div>
            </div>
            }
        </div>
    </div>
</div>



@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}