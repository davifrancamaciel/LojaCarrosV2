@model LojaCarrosV2.PainelWeb.Models.UsuarioRessetSenhaVM
@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
    <title>Resset password</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/move-top")


</head>
<body style="padding-top:70px">




    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong> Informe sua nova Senha</strong>
                    </div>


                    <div class="panel-body">

                        @using (Html.BeginForm("ResetPassword", "Esqueceu", FormMethod.Post))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IdUsuario)
                            @Html.HiddenFor(model => model.Email)
                            @Html.HiddenFor(model => model.IdEmpresa)
                            @Html.HiddenFor(model => model.PermissaoValor)



                            <fieldset>
                                <div class="row">

                                    <div class="col-md-12">
                                        <div class="alert alert-danger text-center">
                                            @Html.DisplayFor(model => model.Email)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">

                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-user"></i>
                                                </span>
                                                @Html.PasswordFor(u => u.Senha, new { @class = "form-control input-lg", placeholder = "Senha", @Style = "autofocus" })

                                            </div>
                                            @Html.ValidationMessageFor(c => c.Senha, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-lock"></i>
                                                </span>
                                                @Html.PasswordFor(u => u.SenhaConf, new { @class = "form-control input-lg", placeholder = "confirme a nova Senha" })

                                            </div>
                                            @Html.ValidationMessageFor(c => c.SenhaConf, "", new { @class = "text-danger" })<div class="clearfix"></div>
                                        </div>

                                        <div class="form-group">
                                            <button type="submit" class="btn btn-lg btn-warning btn-block">Alterar</button>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        }
                    </div>


                </div>
            </div>
        </div>
    </div>

    <div class="copy-rights text-center">
        <p><a href="@ViewBag.DominioAppCliente"><h4><i class="fa fa-home"></i>&nbsp;Home</h4></a></p>
    </div>

    @Html.Partial("_Modal")



    @Scripts.Render("~/bundles/jqueryval")

</body>
</html>
