                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="msg-fild">
                            @Html.ValidationMessageFor(c => c.Asunto, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(c => c.Asunto, new { @class = "txtBox", placeholder = "Assunto" })
                        </div>
                        <div class="message-fild">
                            @Html.ValidationMessageFor(c => c.Mensagem, "", new { @class = "text-danger" })
