                    @using (Html.BeginForm())
                    {
                        <p>@Html.AntiForgeryToken()</p>

                        <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>

                        <div class="text">
                            <div class="text-fild">
                                @Html.ValidationMessageFor(c => c.NomeUsuario, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(c => c.NomeUsuario, new { @class = "txtBox", placeholder = "Nome" })

