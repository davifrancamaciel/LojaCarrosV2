                        <div class="boxed_mini_details clearfix">
                            @if (@item.Valor != 0 && item.ExibeValor == true)
                            {
                                <span class="area first textoResponsivo">
                                    <strong>Valor</strong>@string.Format("{0:c}", item.Valor, 00)
